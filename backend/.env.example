# Application Settings
APP_NAME="MediFlow Lite"
APP_VERSION="1.0.0"
DEBUG=false
ENVIRONMENT=production

# API Configuration
API_V1_PREFIX=/api/v1

# Database Configuration
# For local development (SQLite)
DATABASE_URL=sqlite:///./mediflow.db

# For production (PostgreSQL)
# POSTGRES_URL=postgresql://user:password@localhost:5432/mediflow

# Security (CRITICAL: Change these in production!)
# Generate with: openssl rand -hex 32
SECRET_KEY=your-secret-key-here-change-in-production
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30
REFRESH_TOKEN_EXPIRE_DAYS=7

# CORS Origins (comma-separated)
CORS_ORIGINS=http://localhost:3000,http://localhost:8000

# Rate Limiting
RATE_LIMIT_PER_MINUTE=60

# SendGrid Email Service
SENDGRID_API_KEY=your-sendgrid-api-key
SENDGRID_FROM_EMAIL=noreply@mediflow.com

# Gemini AI API
GEMINI_API_KEY=your-gemini-api-key

# AI Assistant Configuration (Database-focused chat)
# OpenAI (for online mode)
OPENAI_API_KEY=sk-your-openai-api-key-here
OPENAI_MODEL=gpt-4o-mini
OPENAI_MAX_TOKENS=2000

# Local LLM (for offline mode - llama.cpp with Phi-3)
LOCAL_LLM_ENABLED=true
LOCAL_LLM_MODEL_PATH=./models/phi-3-mini-4k-instruct.gguf
LOCAL_LLM_CONTEXT_SIZE=4096
LOCAL_LLM_THREADS=4

# AI Assistant Settings
AI_FALLBACK_TO_LOCAL=true
AI_MAX_CONTEXT_MESSAGES=10
AI_TEMPERATURE=0.1

# File Upload
MAX_UPLOAD_SIZE_MB=10
UPLOAD_DIR=./uploads

# Logging
LOG_LEVEL=INFO

# Compliance
DATA_RETENTION_DAYS=2555
ENABLE_AUDIT_LOG=true

# Password Policy
PASSWORD_MIN_LENGTH=8
PASSWORD_REQUIRE_UPPERCASE=true
PASSWORD_REQUIRE_LOWERCASE=true
PASSWORD_REQUIRE_DIGIT=true
PASSWORD_REQUIRE_SPECIAL=true
MAX_LOGIN_ATTEMPTS=5

